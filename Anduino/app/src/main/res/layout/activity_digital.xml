<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tonydicola.bletest.app.Digital"
    android:background="#C0C0C0"
    android:orientation="vertical">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Signal numérique"
                    android:id="@+id/textView3"
                    android:padding="10dp"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:text="\tUn signal numérique est un signal qui représente une séquence de valeurs discrètes. Un signal logique est un signal numérique avec seulement deux valeurs possibles, et décrit un flux binaire arbitraire. D'autres types de signaux numériques peuvent représenter une logique à trois valeurs ou des logiques de plus grande valeur."
                        />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:padding="10dp">

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView2"
                            android:src="@drawable/digital_signal"
                            android:layout_gravity="center"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Signal numérique en binaire"
                            android:id="@+id/textView10"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:text="\tUn signal numérique est une grandeur physique qui est en alternance entre un ensemble discret de formes d'onde. En variante, un signal numérique peut être considérée comme la séquence des codes représentés par une quantité physique. La quantité physique peut être du courant alternatif ou de tension d'un signal électrique, l'intensité lumineuse d'un signal optique, l'intensité de signal d'un signal radio ou un signal acoustique, l'aimantation d'un support de stockage magnétique, etc. Les signaux numériques sont présents dans toutes électronique numérique, calcul notamment l'équipement et la transmission de données."
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Pratique"
                    android:id="@+id/textView3"
                    android:padding="10dp"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:text="\tUne broche numérique a deux états: basse et haute. Si la broche a été configurée comme une sortie avec pinMode (), sa tension est réglé sur la valeur correspondante: 5V (ou 3.3V sur des cartes de 3.3V) pour HIGH, 0V (sol) pour LOW. \ N \ t Dans cet exemple, vous pouvez modifier la valeur de la LED en appuyant sur un des boutons ci-dessous."
                    android:padding="10dp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:id="@+id/radioGroup1"
                    android:padding="10dp">

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Low"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:id="@+id/radioButton2"
                        android:textColor="@drawable/radio_text"
                        android:background="@drawable/radio_states_red"
                        android:gravity="center"
                        android:button="@null"
                        android:layout_marginRight="10dp"
                        android:checked="true"
                        />

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="High"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:id="@+id/radioButton"
                        android:textColor="@drawable/radio_text"
                        android:background="@drawable/radio_states_green"
                        android:button="@null"
                        android:gravity="center"/>


                </RadioGroup>






            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Moniteur de connexion"
                    android:id="@+id/textView3"
                    android:padding="10dp"
                    android:textSize="19dp"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:id="@+id/scrollView" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView12"
                        android:padding="10dp"/>
                </ScrollView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
